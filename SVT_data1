from sklearn.model_selection import train_test_split
from sklearn import svm
from sklearn import metrics
import pandas as pd
from sklearn.preprocessing import LabelEncoder

# Load dataset
student = pd.read_csv('https://raw.githubusercontent.com/ffxthmmp/Project/main/datanew.csv')

# Initialize the LabelEncoder
label_encoder = LabelEncoder()

# Encode 'BRANCH' column
student['BRANCH_encoded'] = label_encoder.fit_transform(student['BRANCH'])

# Drop non-numeric and target columns
student = student.drop(columns=['BRANCH', 'F_NAME', 'SEMESTER'])

# Convert remaining categorical columns to dummy variables
student = pd.get_dummies(student, drop_first=True)

# Define features and target
feature = student.drop(columns=['BRANCH_encoded'])
target = student['BRANCH_encoded']

# Splitting the dataset into the Training set and Test set
X_train, X_test, y_train, y_test = train_test_split(feature, target, test_size=0.3, random_state=42)

# Create SVM classifier
clf = svm.SVC()

# Train the model using the training sets
clf.fit(X_train, y_train)

# Predict the response for the test dataset
y_pred = clf.predict(X_test)

# Print accuracy
print("Accuracy:", metrics.accuracy_score(y_test, y_pred))
